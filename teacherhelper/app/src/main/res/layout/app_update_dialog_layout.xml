<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="305dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/update_dialog_topbg" />

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_white_stroke_white_solid_cornerbottom10"
        android:orientation="vertical"
        android:paddingBottom="28dp">

        <LinearLayout
            android:id="@+id/ly_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="25dp"
            android:paddingLeft="33dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_33316_style"
                android:layout_marginBottom="30dp"
                android:text="发现新版本"
                android:textColor="@color/g000000"
                android:textSize="28sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_msg"
                style="@style/text_66615_style"
                android:lineSpacingExtra="6dp"
                android:maxLines="5"
                android:text="1、更改了UI版式" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="122dp"
                android:layout_height="40dp"
                android:background="@drawable/rec_999_stroke_trans_solid_corner30"
                android:text="下次再说"
                android:textColor="@color/g333333"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_confirm_unforce"
                android:layout_width="122dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rec_red_stroke_red_solid_corner30"
                android:text="立即更新"
                android:textColor="@color/gffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_confirm_force"
                android:layout_width="158dp"
                android:layout_height="40dp"
                android:background="@drawable/rec_red_stroke_red_solid_corner30"
                android:text="立即更新"
                android:textColor="@color/gffffff"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>