<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:minHeight="70dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/download_uncheck" />

        <com.park61.teacherhelper.widget.circleimageview.CircleImageView
            android:id="@+id/img_person"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/img_default_v" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_person_name"
                style="@style/text_33315_style"
                android:text="老师" />

            <TextView
                android:id="@+id/tv_person_role"
                style="@style/text_99912_style"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:text="园长" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/hline_fill_top"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp" />

</LinearLayout>