<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginTop="60dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/changpian" />

                <com.park61.teacherhelper.widget.circleimageview.CircleImageView
                    android:id="@+id/img_audio_center"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="35dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_default_v"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_audio_cover"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_default_v" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="44dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/erji" />

                    <TextView
                        android:id="@+id/tv_scannumber"
                        style="@style/text_fff11_style"
                        android:layout_marginLeft="3dp"
                        android:text="123" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_33320_style"
                android:layout_marginTop="30dp"
                android:text="" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <com.park61.teacherhelper.widget.circleimageview.CircleImageView
                    android:id="@+id/img_auth"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/headimg_default_img" />

                <TextView
                    android:id="@+id/tv_auth_name"
                    style="@style/text_66612_style"
                    android:layout_marginLeft="5dp"
                    android:text="" />

                <TextView
                    style="@style/text_66612_style"
                    android:text=" · " />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/text_66612_style"
                    android:text="" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/title_lay"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_intro"
                        style="@style/myorder_activity_top_tv_style"
                        android:checked="true"
                        android:text="简介"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_list"
                        style="@style/myorder_activity_top_tv_style"
                        android:text="歌单"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_files"
                        style="@style/myorder_activity_top_tv_style"
                        android:text="课件"
                        android:textSize="16sp" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/rg"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <View
                            android:id="@+id/stick0"
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:background="@color/com_orange"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <View
                            android:id="@+id/stick1"
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:background="@color/com_orange"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/area_stick2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <View
                            android:id="@+id/stick2"
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:background="@color/com_orange"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/hline_fill"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_details_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <TextView
                style="@style/text_66616_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:background="@color/bg_color"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/com_border_margin"
                android:text="专辑简介" />

            <com.park61.teacherhelper.widget.webview.ShowImageWebView
                android:id="@+id/wv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_video_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/com_border_margin"
                android:paddingRight="@dimen/com_border_margin">

                <TextView
                    android:id="@+id/tv_source_num"
                    style="@style/text_66616_style"
                    android:layout_centerVertical="true"
                    android:text="歌单(0)" />

                <LinearLayout
                    android:id="@+id/area_to_play_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@mipmap/dingbubofang3" />

                    <TextView
                        style="@style/text_33316_style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="播放全部" />
                </LinearLayout>
            </RelativeLayout>

            <com.park61.teacherhelper.widget.listview.ListViewScrollView
                android:id="@+id/lv_video_source"
                style="@style/com_lv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_files_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/com_border_margin"
                android:paddingRight="@dimen/com_border_margin">

                <TextView
                    android:id="@+id/tv_files_num"
                    style="@style/text_66616_style"
                    android:layout_centerVertical="true"
                    android:text="相关课件(0)" />

                <LinearLayout
                    android:id="@+id/area_to_download_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@mipmap/xiazai" />

                    <TextView
                        style="@style/text_33316_style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="下载全部" />
                </LinearLayout>
            </RelativeLayout>

            <com.park61.teacherhelper.widget.listview.ListViewScrollView
                android:id="@+id/lv_files"
                style="@style/com_lv_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/area_see_all_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View style="@style/hline_margin12_top" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/gffffff"
                    android:gravity="center">

                    <TextView
                        style="@style/text_66616_style"
                        android:text="查看全部" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="3dp"
                        android:src="@mipmap/icon_right_2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_how_to_save"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#fff6f8"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/icon_how_to_save" />

                <TextView
                    style="@style/text_66615_style"
                    android:layout_marginLeft="5dp"
                    android:text="如何将附件保存到电脑？"
                    android:textColor="@color/color_text_red_deep" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/Blank" />

        <LinearLayout
            android:id="@+id/area_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/reddot"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="相关推荐"
                    android:textColor="@color/bdp_dark_gray"
                    android:textSize="17sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recommend"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="8dp"
                android:divider="#ffff0000"
                android:dividerHeight="10dp" />
        </LinearLayout>

        <View style="@style/Blank" />

        <LinearLayout
            android:id="@+id/ll_newcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/reddot"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_newcommend"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:text="最新评价"
                android:textColor="@color/bdp_dark_gray"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_commt_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="68dp"
                android:src="@mipmap/commt_empty" />

            <TextView
                style="@style/text_33314_style"
                android:layout_marginTop="10dp"
                android:text="智慧如你，不想发表一点想法咩~"
                android:textColor="#CECFD5" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>