<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <LinearLayout
            android:id="@+id/area_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:src="@mipmap/icon_red_backimg" />
        </LinearLayout>

        <TextView
            android:id="@+id/page_title"
            style="@style/topbar_title_style"
            android:text="添加幼儿园" />

        <LinearLayout
            android:id="@+id/area_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                style="@style/text_33314_style"
                android:layout_marginRight="@dimen/com_border_margin"
                android:text="提交"
                android:textColor="@color/color_text_red_deep" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/area_top_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/top_bar"
        android:background="@color/bg_color" />

    <LinearLayout
        android:id="@+id/area_group"
        android:layout_below="@+id/area_top_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/group_name_area"
            style="@style/me_item_area_style2">

            <TextView
                style="@style/me_item_tv_style"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:text="幼儿园名称"
                android:textColor="@color/g333333" />

            <EditText
                android:id="@+id/et_group_name_value"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/com_border_margin"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请输入"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/color_text_tip"
                android:textSize="15sp" />
        </RelativeLayout>

        <View style="@style/hline_marginleft15" />

        <RelativeLayout
            android:id="@+id/group_nick_area"
            style="@style/me_item_area_style2">

            <TextView
                style="@style/me_item_tv_style"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:text="简称"
                android:textColor="@color/g333333" />

            <EditText
                android:id="@+id/et_group_nick_value"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/com_border_margin"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请输入"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/color_text_tip"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_color" />

        <RelativeLayout
            android:id="@+id/group_type_area"
            style="@style/me_item_area_style2">

            <TextView
                style="@style/me_item_tv_style"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:text="幼儿园性质"
                android:textColor="@color/g333333" />

            <TextView
                android:id="@+id/et_groupp_type_value"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/color_text_tip"
                android:textSize="15sp" />

            <ImageView
                style="@style/me_item_arrow_style"
                android:layout_marginRight="15dp" />
        </RelativeLayout>

        <View style="@style/hline_marginleft15" />

        <RelativeLayout
            android:id="@+id/group_addr_big_area"
            style="@style/me_item_area_style2">

            <TextView
                style="@style/me_item_tv_style"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:text="地区"
                android:textColor="@color/g333333" />

            <TextView
                android:id="@+id/tv_groupp_addr_big_value"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/color_text_tip"
                android:textSize="15sp" />

            <ImageView
                style="@style/me_item_arrow_style"
                android:layout_marginRight="15dp" />
        </RelativeLayout>

        <View style="@style/hline_marginleft15" />

        <RelativeLayout
            android:id="@+id/group_addr_area"
            style="@style/me_item_area_style2">

            <TextView
                style="@style/me_item_tv_style"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:text="详细地址"
                android:textColor="@color/g333333" />

            <EditText
                android:id="@+id/et_groupp_addr_value"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/com_border_margin"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="例：A3栋1401室"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/color_text_tip"
                android:textSize="15sp" />
        </RelativeLayout>

        <View style="@style/hline_marginleft15" />

        <RelativeLayout
            android:id="@+id/group_office_area"
            style="@style/me_item_area_style2">

            <TextView
                style="@style/me_item_tv_style"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:text="我的职务"
                android:textColor="@color/g333333" />

            <TextView
                android:id="@+id/et_groupp_office_value"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/color_text_tip"
                android:textSize="15sp" />

            <ImageView
                style="@style/me_item_arrow_style"
                android:layout_marginRight="15dp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gffffff"
        android:text="提 交"
        android:textColor="@color/color_text_red_deep"
        android:textSize="18sp" />

</RelativeLayout>