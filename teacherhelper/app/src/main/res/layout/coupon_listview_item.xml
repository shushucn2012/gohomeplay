<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/top_space"
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rec_white_stroke_white_solid_corner5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="105dp">

            <LinearLayout
                android:id="@+id/amount_area"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/unit_tv"
                    style="@style/text_red18_style2"
                    android:layout_marginTop="5dp"
                    android:text="¥" />

                <TextView
                    android:id="@+id/amount_tv"
                    style="@style/text_red36_style2"
                    android:layout_marginLeft="5dp"
                    android:text="500" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/amount_area"
                android:background="@mipmap/line_coupon_v" />

            <LinearLayout
                android:id="@+id/content_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/amount_area"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_coupon_title"
                    style="@style/text_33318_style"
                    android:textSize="17sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="14dp"
                    android:singleLine="true"
                    android:text="满100减30" />

                <TextView
                    android:id="@+id/limittime_tv"
                    style="@style/text_99912_style"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:text="2016.03.13-2016.04.21" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@mipmap/line_coupon_h" />

                <RelativeLayout
                    android:id="@+id/area_expand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/text_99912_style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="详细信息" />

                    <ImageView
                        android:id="@+id/img_expand"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/icon_coupon_down_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_chk"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/xuanze_default2"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_goto_use"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_goto_use"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_used"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/used"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_past"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/past"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/area_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View style="@style/hline_fill_top" />

            <TextView
                android:id="@+id/tv_remark"
                style="@style/text_66612_style"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="1231231" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

</LinearLayout>