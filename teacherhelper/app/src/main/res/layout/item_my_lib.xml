<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="36dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_v"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_22215_style"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="61乐园独家精品儿童剧演出"
                />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/between_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/publish"
            android:text="发布"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="68dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:background="@drawable/shape_activity_share"
            style="@style/text_red14_style2"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray"/>
</LinearLayout>