<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#00000000" />
            <corners android:radius="15dp" />

        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="135"
                android:endColor="#eeFB9B60"
                android:startColor="#ffFB506A"
                android:type="linear" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <!-- 圆角 -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>

