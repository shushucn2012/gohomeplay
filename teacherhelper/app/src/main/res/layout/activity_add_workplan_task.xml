<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/topbar_com_whole" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_33315_style"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="事项名称" />

                <EditText
                    android:id="@+id/edit_task_name"
                    style="@style/text_66615_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输事项名称"
                    android:maxLength="20"
                    android:text=""
                    android:textColorHint="@color/gc9bec2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/text_33315_style"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="15dp"
                    android:text="事项描述" />

                <EditText
                    android:id="@+id/edit_info"
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="请输入事项描述"
                    android:maxLength="200"
                    android:paddingBottom="10dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="11dp"
                    android:textColor="@color/g666666"
                    android:textColorHint="@color/gc9bec2"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gdddddd" />

            <RelativeLayout
                android:id="@+id/area_level1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    style="@style/text_33315_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:text="一级分类" />

                <TextView
                    android:id="@+id/tv_level1_name"
                    style="@style/text_66615_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="28dp"
                    android:text="" />

                <ImageView style="@style/adjust_arrow_style" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gdddddd" />

            <RelativeLayout
                android:id="@+id/area_chooseman"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_doperson_label"
                    style="@style/text_33315_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:text="执行人" />

                <TextView
                    android:id="@+id/tv_doperson"
                    style="@style/text_66615_style"
                    android:layout_toRightOf="@+id/tv_doperson_label"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="28dp"
                    android:text="" />

                <ImageView style="@style/adjust_arrow_style" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gdddddd" />

            <RelativeLayout
                android:id="@+id/area_choosetime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    style="@style/text_33315_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:text="执行时间" />

                <TextView
                    android:id="@+id/tv_date_chosen"
                    style="@style/text_66615_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="28dp"
                    android:text="" />

                <ImageView style="@style/adjust_arrow_style" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/gdddddd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    style="@style/text_33315_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="11dp"
                    android:text="重点任务" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/com_border_margin">

                    <LinearLayout
                        android:id="@+id/area_isimportant_true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_ckb1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/download_uncheck" />

                        <TextView
                            style="@style/text_color1_14_style"
                            android:layout_marginLeft="10dp"
                            android:text="是"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/area_isimportant_false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_ckb2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/download_check" />

                        <TextView
                            style="@style/text_color1_14_style"
                            android:layout_marginLeft="10dp"
                            android:text="否"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>