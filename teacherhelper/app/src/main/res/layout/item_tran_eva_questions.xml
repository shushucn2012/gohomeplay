<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tv_question_name"
        style="@style/text_33314_style"
        android:text="1、本次培训的整体满意度：" />

    <LinearLayout
        android:id="@+id/area_score_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/area_eva_answer_score4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_eva_score4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/icon_eva_score4_normal" />

            <TextView
                style="@style/text_99913_style"
                android:layout_marginTop="8dp"
                android:text="略差" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_eva_answer_score3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_eva_score3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/icon_eva_score3_normal" />

            <TextView
                style="@style/text_99913_style"
                android:layout_marginTop="8dp"
                android:text="一般" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_eva_answer_score2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_eva_score2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/icon_eva_score2_normal" />

            <TextView
                style="@style/text_99913_style"
                android:layout_marginTop="8dp"
                android:text="良好" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_eva_answer_score1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_eva_score1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/icon_eva_score1_normal" />

            <TextView
                style="@style/text_99913_style"
                android:layout_marginTop="8dp"
                android:text="优秀" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/area_pick_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <com.park61.teacherhelper.widget.AutoLinefeedLayout
            android:id="@+id/view_wordwrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/gffffff"
            android:paddingTop="3dp"
            android:paddingBottom="3dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/area_content_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_answer_input"
            style="@style/text_33314_style"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/rec_gray_stroke_gray_solid_corner2"
            android:gravity="left|top"
            android:hint="您的反馈信息将作为我们改进和提高的方向"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColorHint="@color/gc9bec2" />
    </LinearLayout>

</LinearLayout>