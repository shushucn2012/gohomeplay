<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/area_outside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/pop_layout"/>

        <View
            style="@style/between_line"
            android:layout_height="1dp"
            android:layout_above="@id/bottom_area"
            android:background="@color/city_search_bg" />

        <LinearLayout
            android:id="@+id/bottom_area"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/play"
                    style="@style/text_22215_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/bofang1"
                    android:gravity="center_horizontal"
                    android:text="播放" />

                <TextView
                    android:id="@+id/toWx"
                    style="@style/text_22214_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/icon_wexini"
                    android:gravity="center_horizontal"
                    android:text="导出到微信"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/toQQ"
                    style="@style/text_22214_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/icon_qq"
                    android:gravity="center_horizontal"
                    android:text="导出到QQ"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_outport"
                    style="@style/text_22214_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/icon_outport"
                    android:gravity="center_horizontal"
                    android:text="导出"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/delete"
                    style="@style/text_22215_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawablePadding="10dp"
                    android:drawableTop="@mipmap/media_delete"
                    android:gravity="center_horizontal"
                    android:text="删除" />
            </LinearLayout>

            <View
                style="@style/between_line"
                android:layout_height="1dp"
                android:background="@color/city_search_bg" />

            <TextView
                android:id="@+id/cancel"
                style="@style/text_22216_style"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="@string/action_cancel" />
        </LinearLayout>
    </RelativeLayout>
</layout>