<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_v"
            />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_22215_style"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="61乐园独家精品儿童剧演出"
                />
            
            <TextView
                android:id="@+id/activity_class"
                android:layout_above="@+id/activity_time"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"
                style="@style/text_99912_style"
                android:text="金贝乐幼儿园 中班"
                />

            <TextView
                android:id="@+id/activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_99912_style"
                android:layout_alignParentBottom="true"
                android:text="2018-01-01 周五 19:00"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            style="@style/text_red15_new"
            android:text="报名中"
            />
    </LinearLayout>

    <View style="@style/between_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/share"
            android:text="@string/activity_share"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="68dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:background="@drawable/shape_activity_share"
            style="@style/text_red14_style2"
            />

        <TextView
            android:id="@+id/activity_data"
            android:layout_toLeftOf="@id/share"
            android:text="@string/activity_data"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="68dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:background="@drawable/shape_activity_data"
            style="@style/text_99914_style"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray"/>
</LinearLayout>