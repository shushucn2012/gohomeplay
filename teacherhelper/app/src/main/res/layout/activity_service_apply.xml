<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="applyClick"
            type="android.view.View.OnClickListener"/>
        <variable
            name="selectClick"
            type="android.view.View.OnClickListener"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/topbar_com_whole" />
        <View style="@style/between_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="请输入服务批次号:"
                style="@style/text_22214_style"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/input_no"
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent"
                    android:paddingLeft="3dp"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:background="@drawable/textborder"
                    />
                <TextView
                    android:id="@+id/server_tv"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="查看权益"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/hint_color"
                    android:onClick="@{selectClick}"
                    android:background="@drawable/view_server_selector"
                    />
                
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/gray"
                    android:visibility="gone"
                    >
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:id="@+id/state_area"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="@color/server_select_r"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp"
                            android:visibility="gone"
                            >

                            <TextView
                                android:id="@+id/server_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/text_22216_style"
                                android:layout_marginLeft="10dp"
                                />
                            <TextView
                                android:id="@+id/server_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/text_66614_style"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_below="@id/server_state"
                                />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您拥有的权益"
                            style="@style/text_22215_style"
                            android:layout_marginLeft="10dp"
                            />
                        <ImageView
                            android:id="@+id/server_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_default_h"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:layout_margin="10dp"
                            />
                        <LinearLayout
                            android:id="@+id/input_info_area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="match_parent"
                                    android:text="联系人:"
                                    style="@style/text_66614_style"
                                    android:gravity="center_vertical"
                                    />
                                <EditText
                                    android:id="@+id/contact_name"
                                    android:layout_width="0dp"
                                    android:layout_weight="9"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="6dp"
                                    android:hint="单行输入(必填项)"
                                    android:maxLength="31"
                                    android:maxLines="2"
                                    style="@style/text_22214_style"
                                    android:gravity="center_vertical"
                                    android:background="@color/server_select_r"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="match_parent"
                                    android:text="联系电话:"
                                    style="@style/text_66614_style"
                                    android:gravity="center_vertical"
                                    />
                                <EditText
                                    android:id="@+id/contact_phone"
                                    android:layout_width="0dp"
                                    android:layout_weight="9"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="6dp"
                                    android:hint="单行输入(必填项)"
                                    android:maxLines="1"
                                    android:maxLength="12"
                                    android:singleLine="true"
                                    android:inputType="phone"
                                    style="@style/text_22214_style"
                                    android:gravity="center_vertical"
                                    android:background="@color/server_select_r"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="match_parent"
                                    android:text="园所:"
                                    style="@style/text_66614_style"
                                    android:gravity="center_vertical"
                                    />
                                <EditText
                                    android:id="@+id/contact_school"
                                    android:layout_width="0dp"
                                    android:layout_weight="9"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="6dp"
                                    android:hint="单行输入(必填项)"
                                    android:maxLength="31"
                                    android:maxLines="2"
                                    style="@style/text_22214_style"
                                    android:gravity="center_vertical"
                                    android:background="@color/server_select_r"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:orientation="horizontal"
                                android:layout_margin="10dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="match_parent"
                                    android:text="地址:"
                                    style="@style/text_66614_style"
                                    android:gravity="center_vertical"
                                    />
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="9"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/contact_site"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="6dp"
                                        android:hint="省/市/县 (必填项)"
                                        style="@style/text_22214_style"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:background="@color/server_select_r"
                                        />
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/icon_right_2"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="5dp"
                                        />
                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:background="@color/gray"
                                />
                        </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                    <TextView
                        android:id="@+id/apply_bt"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:text="立即申请"
                        android:textSize="18sp"
                        android:textColor="#eb554f"
                        android:onClick="@{applyClick}"
                        android:background="@color/white"
                        android:visibility="visible"
                        android:gravity="center"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/area_null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/qimg"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@mipmap/icon_no_service"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="140dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查无记录"
                        style="@style/text_22215_style"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请核对您的批次号是否正确"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/area_missing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tips"
                        android:layout_marginLeft="10dp"
                        style="@style/text_99913_style"
                        android:text="输入售后服务保障卡的批次号，即可查看并申请服务。"
                        />
                    <ImageView
                        android:layout_width="260dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/icon_missing"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:id="@+id/tv_reportloss"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:text="挂失补领"
                        style="@style/text_33316_style"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:background="@drawable/shape_corner_2"
                        />
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</layout>