        <RelativeLayout
            android:id="@+id/area_bottom_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="90dp"
                android:layout_height="6dp"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/colorLine"
                app:cardCornerRadius="3dp"
                app:cardElevation="0dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_front_progress"
                android:layout_width="70dp"
                android:layout_height="6dp"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/com_orange"
                app:cardCornerRadius="3dp"
                app:cardElevation="0dp" />

            <TextView
                android:id="@+id/tv_progresstext"
                style="@style/text_99913_style"
                android:layout_alignParentRight="true"
