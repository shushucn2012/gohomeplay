<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.park61.teacherhelper.widget.circleimageview.CircleImageView
            android:id="@+id/img_member_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/com_border_margin"
            android:src="@mipmap/mine_icon"
            app:border_color="@color/white"
            app:border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_member_header"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/img_admin_label"
                    android:layout_width="34dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="7dp"
                    android:src="@mipmap/icon_vip_group_admin"/>

                <TextView
                    android:id="@+id/tv_member_name"
                    style="@style/text_33315_style"
                    android:text="崔成成" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_member_duty"
                style="@style/text_99912_style"
                android:text="班主任老师" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_delete"
            style="@style/text_fff18_style"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/com_orange"
            android:text="删除"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/hline_fill_halfdp"
        android:layout_marginLeft="70dp" />
</LinearLayout>