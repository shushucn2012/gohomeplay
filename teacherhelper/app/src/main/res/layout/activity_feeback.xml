<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <LinearLayout
            android:id="@+id/area_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:src="@mipmap/icon_red_backimg" />
        </LinearLayout>

        <TextView
            android:id="@+id/page_title"
            style="@style/topbar_title_style"
            android:text="意见反馈" />

        <LinearLayout
            android:id="@+id/area_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                style="@style/text_colorred_14_style"
                android:paddingRight="@dimen/com_border_margin"
                android:text="提交" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        style="@style/text_color1_14_style"
        android:layout_marginLeft="@dimen/com_border_margin"
        android:layout_marginTop="20dp"
        android:text="选择反馈问题的类型" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/com_border_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_ckb1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_xuanzhong_default" />

            <TextView
                style="@style/text_color1_14_style"
                android:layout_marginLeft="10dp"
                android:text="功能异常：无法正常使用"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_ckb2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_xuanzhong_default" />

            <TextView
                style="@style/text_color1_14_style"
                android:layout_marginLeft="10dp"
                android:text="优化意见：用的不爽，尽管吐槽"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_ckb3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_xuanzhong_default" />

            <TextView
                style="@style/text_color1_14_style"
                android:layout_marginLeft="10dp"
                android:text="投诉：活动没参加到，服务态度不好"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/text_color1_14_style"
        android:layout_marginLeft="@dimen/com_border_margin"
        android:layout_marginTop="30dp"
        android:text="意见反馈描述" />

    <EditText
        android:id="@+id/edit_input_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:layout_marginLeft="@dimen/com_border_margin"
        android:layout_marginRight="@dimen/com_border_margin"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="top"
        android:hint="描述一下您的建议或反馈"
        android:maxLength="140"
        android:minLines="5"
        android:padding="5dp"
        android:textColorHint="@color/color_text_tip"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_add_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/com_border_margin"
        android:src="@mipmap/icon_add_pic" />

    <GridView
        android:id="@+id/gv_input_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:background="@color/gffffff"
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:verticalSpacing="10dp"
        android:visibility="gone" />

</LinearLayout>