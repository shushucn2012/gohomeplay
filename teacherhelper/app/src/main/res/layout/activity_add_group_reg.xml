<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <LinearLayout
            android:id="@+id/area_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:src="@mipmap/icon_red_backimg" />
        </LinearLayout>

        <TextView
            android:id="@+id/page_title"
            style="@style/topbar_title_style"
            android:text="添加幼儿园" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tip"
        style="@style/text_red14_style2"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@+id/top_bar"
        android:background="#FFFFF6F9"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:text="没有找到自己的幼儿园？不用担心，填写下方的信息就能马上添加自己幼儿园啦～" />

    <LinearLayout
        android:id="@+id/area_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tip"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/group_name_area"
            style="@style/me_item_area_style2">

            <TextView
                style="@style/me_item_tv_style2"
                android:text="幼儿园名称" />

            <EditText
                android:id="@+id/et_group_name_value"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/com_border_margin"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请输入幼儿园全称"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/color_text_tip"
                android:textSize="15sp" />
        </RelativeLayout>

        <View style="@style/hline_margin12_top" />

        <RelativeLayout
            android:id="@+id/group_addr_big_area"
            style="@style/me_item_area_style2">

            <TextView
                style="@style/me_item_tv_style2"
                android:text="所在地区" />

            <TextView
                android:id="@+id/tv_groupp_addr_big_value"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请输入选择幼儿园所在地区"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/color_text_tip"
                android:textSize="15sp" />

            <ImageView
                style="@style/me_item_arrow_style"
                android:layout_marginRight="15dp" />
        </RelativeLayout>

        <View style="@style/hline_margin12_top" />

        <RelativeLayout
            android:id="@+id/group_addr_area"
            style="@style/me_item_area_style2">

            <TextView
                style="@style/me_item_tv_style2"
                android:text="详细地址" />

            <EditText
                android:id="@+id/et_groupp_addr_value"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/com_border_margin"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="例：A3栋1401室"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/color_text_tip"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gffffff"
        android:text="提 交"
        android:textColor="@color/color_text_red_deep"
        android:textSize="18sp" />
</RelativeLayout>