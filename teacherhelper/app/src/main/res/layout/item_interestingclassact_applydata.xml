<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/com_border_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_username"
                    style="@style/text_33316_style"
                    android:text="陈紫函" />

                <TextView
                    android:id="@+id/tv_pay_money"
                    style="@style/text_33316_style"
                    android:layout_alignParentRight="true"
                    android:text="50" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_group_class_name"
                style="@style/text_99914_style"
                android:layout_marginTop="8dp"
                android:text="中二班" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_mobile"
                    style="@style/text_99914_style"
                    android:text="18584516190" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/text_99914_style"
                    android:layout_alignParentRight="true"
                    android:text="2018.08.08 13:30" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/bottom_line"
            style="@style/hline_fill_halfdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/com_border_margin" />
    </LinearLayout>
</FrameLayout>