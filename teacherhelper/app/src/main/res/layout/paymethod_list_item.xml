<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/gffffff"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="40dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <ImageView
        android:id="@+id/img_pay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/weixinzhifu" />

    <TextView
        android:id="@+id/tv_paymethod_name"
        style="@style/text_33314_style"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/img_pay"
        android:text="微信支付" />

    <CheckBox
        android:id="@+id/chk_pay"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/chk_apply_babylist_item_selector"
        android:button="@null"
        android:clickable="false" />

</RelativeLayout>