<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/com_border_margin"
    android:paddingRight="@dimen/com_border_margin">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/bg_color"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="60dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="18dp"
            android:paddingRight="15dp"
            android:paddingBottom="18sp">

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/download_uncheck" />

            <TextView
                android:id="@+id/tv_temp_content"
                style="@style/text_33314_style"
                android:layout_marginLeft="10dp"
                android:text="这个看起来有点像狗头和蜘蛛的结合体的生物，其实是一种盲蛛，但要注意的是，盲蛛并不是蜘蛛。这个看起来有点像狗头和蜘蛛的结合体的生物，其实是一种盲蛛，但要注意的是，盲蛛并不是蜘蛛。其实是一种盲蛛，但要注意的是，盲蛛并不是蜘蛛。" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white" />

</LinearLayout>