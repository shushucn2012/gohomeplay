<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/topbar_com_whole" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/com_border_margin"
            android:paddingRight="@dimen/com_border_margin">

            <TextView
                style="@style/text_66615_style"
                android:layout_centerVertical="true"
                android:text="宝宝姓名：" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:text=""
                android:textColor="@color/g333333"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            style="@style/hline_fill_halfdp"
            android:layout_marginLeft="@dimen/com_border_margin" />

        <RelativeLayout
            android:id="@+id/area_choose_sex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/com_border_margin"
            android:paddingRight="@dimen/com_border_margin">

            <TextView
                style="@style/text_66615_style"
                android:layout_centerVertical="true"
                android:text="性别：" />

            <TextView
                android:id="@+id/tv_student_sex"
                style="@style/text_33315_style"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="男" />

            <ImageView
                style="@style/adjust_arrow_style"
                android:layout_marginRight="0dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>