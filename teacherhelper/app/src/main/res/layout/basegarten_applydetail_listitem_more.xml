<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/com_border_margin"
    android:paddingRight="@dimen/com_border_margin">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <com.park61.teacherhelper.widget.circleimageview.CircleImageView
            android:id="@+id/img_def"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_default_info"
            app:border_color="@color/transparent"
            app:border_width="0dp" />

        <TextView
            android:id="@+id/tv_zzname"
            style="@style/text_33318_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img_def"
            android:text="师训展示" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_desc"
        style="@style/text_66614_style"
        android:layout_centerVertical="true"
        android:layout_marginLeft="51dp"
        android:text="设计源于生活，细节源于品质" />

    <RelativeLayout
        android:id="@+id/lv_eva_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="15dp"
        android:background="@color/com_orange"
        android:orientation="vertical">

        <com.park61.teacherhelper.widget.gridview.GridViewForScrollView
            android:id="@+id/gv_eva_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-5dp"
            android:background="@color/gffffff"
            android:horizontalSpacing="10dp"
            android:listSelector="@color/transparent"
            android:numColumns="3"
            android:verticalSpacing="10dp"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent" />

    <View
        android:id="@+id/list_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

</LinearLayout>