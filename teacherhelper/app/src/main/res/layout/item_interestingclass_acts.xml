<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/area_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/gffffff"
        android:orientation="vertical"
        android:padding="@dimen/com_border_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_act"
                    android:layout_width="120dp"
                    android:layout_height="77dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_default_h"
                    app:riv_corner_radius="2dp" />

                <View
                    android:id="@+id/area_img_cover"
                    android:layout_width="120dp"
                    android:layout_height="77dp"
                    android:background="#33000000"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/text_33314_style"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="贝玛入园亲子活动 有趣好玩免费趣" />


                <android.support.v7.widget.CardView
                    android:id="@+id/cardview_status"
                    android:layout_width="40dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/com_orange"
                    app:cardCornerRadius="2dp">

                    <TextView
                        android:id="@+id/tv_status"
                        style="@style/text_fff12_style"
                        android:layout_gravity="center"
                        android:text="进行中" />

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right">

            <Button
                android:id="@+id/btn_apply_details"
                style="@style/text_66614_style"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:background="@drawable/rec_999_stroke_trans_solid_corner30"
                android:text="报名数据" />

            <Button
                android:id="@+id/btn_share"
                style="@style/text_66614_style"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rec_999_stroke_trans_solid_corner30"
                android:text="分享" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_color" />
</LinearLayout>