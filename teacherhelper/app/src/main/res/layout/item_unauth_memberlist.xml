<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:paddingLeft="@dimen/com_border_margin"
        android:paddingRight="@dimen/com_border_margin">

        <com.park61.teacherhelper.widget.circleimageview.CircleImageView
            android:id="@+id/img_member_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/mine_icon"
            app:border_color="@color/white"
            app:border_width="1dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/img_member_header"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_member_name"
                style="@style/text_33315_style"
                android:text="崔成成" />

            <TextView
                android:id="@+id/tv_member_duty"
                style="@style/text_99912_style"
                android:text="班主任老师" />

            <TextView
                android:id="@+id/tv_member_mobile"
                style="@style/text_99912_style"
                android:text="18062511980" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/area_pass"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="58dp"
            app:cardBackgroundColor="@color/com_orange"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/text_fff14_style"
                android:layout_gravity="center"
                android:text="通过" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/area_reject"
            android:layout_width="48dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="#f2f2f2"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <TextView
                style="@style/text_org14_style"
                android:layout_gravity="center"
                android:text="拒绝" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_passed"
            style="@style/text_99914_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="已通过"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:id="@+id/bottom_line"
        style="@style/hline_fill_halfdp"
        android:layout_marginLeft="70dp" />
</LinearLayout>