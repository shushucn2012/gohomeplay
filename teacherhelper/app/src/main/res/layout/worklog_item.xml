<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.park61.teacherhelper.widget.circleimageview.CircleImageView
            android:id="@+id/check_task"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/com_border_margin"
            android:layout_marginTop="20dp"
            android:src="@mipmap/headimg_default_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_99915_style"
                android:text="天天萌萌哒" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_99912_style"
                android:layout_marginTop="8dp"
                android:text="24分钟前" />

            <TextView
                android:id="@+id/tv_info"
                style="@style/text_33314_style"
                android:layout_marginTop="8dp"
                android:text="这件事情完成的不错！" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_bottom"
        style="@style/hline_fill_halfdp"
        android:layout_marginLeft="@dimen/com_border_margin"
        android:layout_marginTop="20dp" />
</LinearLayout>