<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="103dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="77dp"
        android:layout_marginLeft="@dimen/com_border_margin"
        android:layout_marginTop="13dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/teach_itemempty"
            app:riv_corner_radius="2dp" />

        <ImageView
            android:id="@+id/iv_isplay"
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_watch" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/com_border_margin"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img">

        <TextView
            android:id="@+id/content_title"
            style="@style/text_33314_style"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="想象力到底对孩子有多重要？明白这个将会影响孩子一生！" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/content_time"
                style="@style/text_9b12_style"
                android:layout_centerVertical="true"
                android:text="09月10号 13:30" />

            <TextView
                android:id="@+id/tv_learning_num"
                style="@style/text_9b12_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/content_time"
                android:text="1人学习" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_course_delete" />

            <Button
                android:id="@+id/btn_to_study"
                style="@style/text_fff14_style"
                android:layout_alignParentRight="true"
                android:layout_width="78dp"
                android:layout_height="26dp"
                android:background="@drawable/rec_deepred_stroke_deepred_solid_corner30"
                android:text="立即学习"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/bline"
        style="@style/hline_fill_halfdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/com_border_margin" />
</RelativeLayout>