<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/area_item_content"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/img_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/task_gou" />

        <com.park61.teacherhelper.widget.circleimageview.CircleImageView
            android:id="@+id/img_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            app:border_color="@color/transparent"
            android:src="@mipmap/headimg_default_img" />

        <TextView
            android:id="@+id/tv_stu_name"
            style="@style/text_33315_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:text="崔成成" />
    </RelativeLayout>

    <View
        style="@style/hline_fill_halfdp"
        android:layout_marginLeft="60dp" />
</LinearLayout>