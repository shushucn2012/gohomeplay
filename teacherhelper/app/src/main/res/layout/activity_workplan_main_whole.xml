<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/area_wps_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:visibility="visible">

        <include layout="@layout/topbar_com" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="46dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/area_top_banner"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="@dimen/com_border_margin">

                    <!--<android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="12dp">

                    </android.support.v7.widget.CardView>-->

                    <com.lijiankun24.shadowlayout.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:shadowColor="#33000000"
                        app:shadowDx="0dp"
                        app:shadowDy="5dp"
                        app:shadowRadius="10dp"
                        app:shadowShape="rectangle"
                        app:shadowSide="all">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/wp_first_top_banner2" />

                    </com.lijiankun24.shadowlayout.ShadowLayout>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/wp_first_top_banner2"
                        android:translationZ="12dp"
                        app:riv_corner_radius="8dp" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/area_today_wp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/text_33320_style"
                        android:layout_marginLeft="@dimen/com_border_margin"
                        android:layout_marginTop="12dp"
                        android:text="今日事项"
                        android:textSize="22sp" />

                    <com.park61.teacherhelper.widget.listview.ListViewForScrollView
                        android:id="@+id/lv_wp_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/com_border_margin"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="@dimen/com_border_margin"
                        android:cacheColorHint="@color/transparent"
                        android:divider="@color/colorLine"
                        android:dividerHeight="0.5dp"
                        android:listSelector="@color/transparent" />

                    <View
                        style="@style/hline_fill_halfdp"
                        android:layout_marginLeft="@dimen/com_border_margin"
                        android:layout_marginRight="@dimen/com_border_margin"
                        android:layout_marginBottom="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_custom_workplan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_33320_style"
                        android:layout_marginLeft="@dimen/com_border_margin"
                        android:layout_marginTop="12dp"
                        android:text="定制的行事历"
                        android:textSize="22sp" />

                    <FrameLayout
                        android:id="@+id/area_special_entry"
                        android:layout_width="match_parent"
                        android:layout_height="118dp"
                        android:layout_marginLeft="@dimen/com_border_margin"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="@dimen/com_border_margin"
                        android:layout_marginBottom="10dp">

                        <!--<android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="95dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="10dp">

                        </android.support.v7.widget.CardView>-->

                        <com.lijiankun24.shadowlayout.ShadowLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:shadowColor="#33000000"
                            app:shadowDx="0dp"
                            app:shadowDy="5dp"
                            app:shadowRadius="10dp"
                            app:shadowShape="rectangle"
                            app:shadowSide="all">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/wp_first_top_banner2" />

                        </com.lijiankun24.shadowlayout.ShadowLayout>

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/wp_first_mid_banner2"
                            android:translationZ="10dp"
                            app:riv_corner_radius="8dp" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_mysubs_wps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_33320_style"
                        android:layout_marginLeft="@dimen/com_border_margin"
                        android:layout_marginTop="12dp"
                        android:text="我的行事历"
                        android:textSize="22sp" />

                    <!--  <com.park61.teacherhelper.widget.gridview.GridViewForScrollView
                          android:id="@+id/gv_my_wp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="@dimen/com_border_margin"
                          android:layout_marginTop="15dp"
                          android:layout_marginRight="@dimen/com_border_margin"
                          android:horizontalSpacing="12dp"
                          android:listSelector="#00000000"
                          android:numColumns="2"
                          android:verticalSpacing="10dp" />-->

                    <com.park61.teacherhelper.widget.listview.ListViewForScrollView
                        android:id="@+id/lv_my_wp"
                        style="@style/com_lv_style"
                        android:layout_marginLeft="@dimen/com_border_margin"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="@dimen/com_border_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/bg_color" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/area_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="46dp"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="135dp"
                android:layout_marginTop="130dp"
                android:src="@mipmap/icon_cotent_empty" />

            <TextView
                style="@style/text_33320_style"
                android:layout_marginTop="20dp"
                android:text="您还未订阅过行事历" />

            <TextView
                style="@style/text_33314_style"
                android:layout_marginTop="20dp"
                android:text="快去订阅吧！" />

            <Button
                android:id="@+id/btn_to_subs"
                android:layout_width="230dp"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:background="@mipmap/btn_bg_wps_subs"
                android:text="立即订阅"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/area_temp_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:visibility="gone">

        <RelativeLayout style="@style/topbar_area_style">

            <LinearLayout
                android:id="@+id/area_to_temp_manage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/icon_to_temp_manage" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/serach_area"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rec_gray_stroke_gray_solid_corner30"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edit_sousuo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="搜索"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLength="30"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:singleLine="true"
                android:textColor="@color/g333333"
                android:textColorHint="@color/gc9bec2"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_sousuo"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:src="@mipmap/xiaosousuo" />

            <ImageView
                android:id="@+id/img_del"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/shanchu"
                android:visibility="gone" />
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_task_done_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="2dp"
            android:background="@color/transparent"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp" />
    </FrameLayout>
</LinearLayout>