<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/planchoose_list_bg"
        android:orientation="vertical">

        <TextView
            style="@style/text_33318_style"
            android:layout_marginLeft="@dimen/com_border_margin"
            android:layout_marginTop="@dimen/com_border_margin"
            android:text="目录" />

        <View
            style="@style/hline_fill_halfdp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp" />

        <ListView
            android:id="@+id/lv_items"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="5dp"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:listSelector="#00000000" />
    </LinearLayout>

</LinearLayout>