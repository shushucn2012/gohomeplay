<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="11dp">

        <ImageView
            android:id="@+id/toy_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_v"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            >

            <TextView
                android:id="@+id/toy_name"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_22214_style"
                android:text="儿童积木"
                />

            <LinearLayout
                android:id="@+id/model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                >
                <TextView
                    style="@style/text_99912_style"
                    android:text="规格：" />

                <TextView
                    android:id="@+id/toy_model"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    style="@style/text_99912_style"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_above="@id/model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                >
                <TextView
                    style="@style/text_99912_style"
                    android:text="颜色分类：" />
                <TextView
                    android:id="@+id/toy_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    style="@style/text_99912_style"
                    />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/toy_curr_price"
                style="@style/text_red15_style2"
                android:text="￥135"
                />
            <TextView
                android:id="@+id/toy_orig_price"
                style="@style/text_99913_style"
                android:layout_marginTop="5dp"
                android:layout_gravity="end"
                android:text="￥166"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        style="@style/between_line"
        android:layout_height="1dp"
        android:layout_marginLeft="104dp" />
</LinearLayout>